{
    "env": {
        "browser": true,
        "es6": true,
		"jquery": true,
		"jest": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-unused-vars": [
			"warn", 
			{ 
				"vars": "all", 
				"args": "after-used", 
				"ignoreRestSiblings": false 
			}
		]
    }
}